<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base do app -->
    <style name="Theme.AppMetaTribe" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Cores principais -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Status bar (topo do sistema) -->
        <item name="android:statusBarColor">@color/black</item>

        <!-- Navigation bar (parte inferior do sistema) -->
        <item name="android:navigationBarColor">@color/black</item>

        <!-- Ícones e texto da navigation bar em branco -->
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Ícones da status bar em branco -->
        <item name="android:windowLightStatusBar">false</item>

        <!-- Cor de fundo da tela -->
        <item name="android:windowBackground">@color/black</item>
    </style>

</resources>
